---
// 1. زانیارییەکان لێرە بگۆڕە بۆ کڕیارەکە
const profile_image = "/Aram/photo.jpg"; 
const business_name = "Aram Adeeb Kakae";
const business_bio = "Marketing & Sales Consultant";

// 2. لۆگۆی خۆت (دڵنیابەوە لە گیتھاب ڕێک بەم شێوەیە نووسراوە)
const my_logo = "/Razwan/MyLogo.png"; 
---

<!DOCTYPE html>
<html lang="ku" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{business_name}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        :root {
            --bg-color: #0a0c10;
            --text-main: #ffffff;
            --accent: #58a6ff;
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-main);
            font-family: 'Segoe UI', Tahoma, sans-serif;
            margin: 0;
            padding: 0;
            display: block; /* گۆڕدرا بۆ بڵۆک بۆ ئەوەی سکڕۆڵ ئاسایی بێت */
            min-height: 100vh;
        }

        .main-container {
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .profile-section { 
            text-align: center; 
            margin-top: 20px;
            margin-bottom: 25px; 
        }

        .profile-img {
            width: 90px; height: 90px; border-radius: 50%;
            border: 3px solid var(--accent); padding: 4px; object-fit: cover;
        }

        .links-wrapper { 
            width: 100%; 
            display: flex; 
            flex-direction: column; 
            gap: 12px;
        }

        .btn {
            display: flex; align-items: center; justify-content: center;
            padding: 16px; border-radius: 14px; text-decoration: none;
            font-weight: 600; font-size: 16px; transition: 0.2s;
            position: relative; border: none;
        }

        .btn:active { transform: scale(0.98); }
        .btn i { position: absolute; right: 20px; font-size: 22px; color: inherit !important; }

        .whatsapp { background-color: #25D366; color: #ffffff !important; }
        .instagram { background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888); color: #ffffff !important; }
        .telegram { background-color: #0088cc; color: #ffffff !important; }
        .snapchat { background-color: #fffc00; color: #000000 !important; }

        /* بەشی براندینگی RazwanBusiness ڕێک لە ژێر دوگمەکان */
        .my-brand-section {
            margin: 40px 0 20px 0;
            text-align: center;
            width: 100%;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
        }

        .brand-link {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-decoration: none;
        }

        .my-logo {
            width: 60px;
            height: 60px;
            border-radius: 15px;
            margin: 10px 0;
            object-fit: cover;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .brand-text { font-size: 12px; color: #8b949e; }
        .brand-name { color: var(--accent); font-size: 17px; font-weight: bold; }
    </style>
</head>
<body>

    <div class="main-container">
        <div class="profile-section">
            <img src={profile_image} alt="Profile" class="profile-img">
            <h1 style="margin: 15px 0 5px 0; font-size: 22px;">{business_name}</h1>
            <p style="color:#8b949e; margin: 0; font-size: 14px;">{business_bio}</p>
        </div>

        <div class="links-wrapper">
            <a href="https://wa.me/964750xxxxxxx" class="btn whatsapp">
                <i class="fab fa-whatsapp"></i> WhatsApp
            </a>
            <a href="https://instagram.com/username" class="btn instagram">
                <i class="fab fa-instagram"></i> Instagram
            </a>
            <a href="https://t.me/username" class="btn telegram">
                <i class="fab fa-telegram"></i> Telegram
            </a>
            <a href="https://snapchat.com/add/username" class="btn snapchat">
                <i class="fab fa-snapchat"></i> Snapchat
            </a>
        </div>

        <div class="my-brand-section">
            <a href="https://wa.me/message/OT6XAQOZJJJRO1" class="brand-link" target="_blank">
                <span class="brand-text">سپۆنسەر کراوە لە لایەن:</span>
                <img src={my_logo} alt="Razwan Business" class="my-logo">
                <span class="brand-name">Razwan Business</span>
            </a>
        </div>
    </div>

</body>
</html>
